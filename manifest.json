{
   "name":"Production Ribbon",
   "description":"Show a warning once you're on a production site.",
   "version":"1",
   "manifest_version":2,
   "permissions":[
      "storage"
   ],
   "browser_action":{
      "default_icon":"black-icon.png"
   },
   "background":{
      "scripts":[
         "background.js"
      ]
   },
   "content_scripts":[
      {
         "matches":[
            "<all_urls>"
         ],
         "js":[
            "content_script.js"
         ],
         "css":[
            "content_styles.css"
         ]
      }
   ]
}